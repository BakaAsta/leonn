            <div role="alert" class="rounded-2xl border border-blue-100 bg-white p-4 shadow-lg sm:p-6 lg:p-8">
                <div class="flex items gap-4">
                    {% if type == 'success' %}
                    <span class="shrink-0 rounded-full bg-green-600 p-2 text-white" role='alert'>
                        <svg
                            xmlns="http://www.w3.org/2000/svg"
                            fill="none"
                            viewBox="0 0 24 24"
                            stroke-width="1.5"
                            stroke="currentColor"
                            class="h-4 w-4"
                        >
